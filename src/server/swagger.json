{
  "openapi": "3.0.1",
  "info": {
    "title": "CI-Server API (SHRI)",
    "version": "v1"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "paths": {
    "/settings": {
      "get": {
        "tags": [
          "Settings"
        ],
        "summary": "получение сохраненных настроек",
        "operationId": "Get",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ConfigurationModelHomeworkApiResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConfigurationModelHomeworkApiResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConfigurationModelHomeworkApiResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Settings"
        ],
        "summary": "cохранение настроек",
        "operationId": "Post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfigurationInput"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfigurationInput"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ConfigurationInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/builds": {
      "get": {
        "tags": [
          "Build"
        ],
        "summary": "получение списка сборок",
        "operationId": "GetList",
        "parameters": [
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 25
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/BuildModelArrayHomeworkApiResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildModelArrayHomeworkApiResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildModelArrayHomeworkApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/builds/{commitHash}": {
      "post": {
        "tags": [
          "Build"
        ],
        "summary": "добавление сборки в очередь",
        "operationId": "QueueBuild",
        "parameters": [
          {
            "name": "commitHash",
            "in": "path",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueueBuildInput"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/QueueBuildInput"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/QueueBuildInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/BuildRequestResultModelHomeworkApiResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildRequestResultModelHomeworkApiResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildRequestResultModelHomeworkApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/builds/{buildId}": {
      "get": {
        "tags": [
          "Build"
        ],
        "summary": "получение информации о конкретной сборке",
        "operationId": "GetBuildDetails",
        "parameters": [
          {
            "name": "buildId",
            "in": "path",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/BuildModelHomeworkApiResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildModelHomeworkApiResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildModelHomeworkApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/builds/{buildId}/logs": {
      "get": {
        "tags": [
          "Build"
        ],
        "summary": "получение логов билда (сплошной текст)",
        "operationId": "GetBuildLog",
        "parameters": [
          {
            "name": "buildId",
            "in": "path",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BuildModel": {
        "required": [
          "authorName",
          "branchName",
          "buildNumber",
          "commitHash",
          "commitMessage",
          "configurationId",
          "id",
          "status"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "configurationId": {
            "type": "string",
            "format": "uuid"
          },
          "buildNumber": {
            "type": "integer",
            "format": "int32"
          },
          "commitMessage": {
            "type": "string"
          },
          "commitHash": {
            "type": "string"
          },
          "branchName": {
            "type": "string"
          },
          "authorName": {
            "type": "string"
          },
          "status": {
            "$ref": "#/components/schemas/BuildStatus"
          },
          "start": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "duration": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        }
      },
      "BuildModelArrayHomeworkApiResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "nullable": true,
            "items": {
              "$ref": "#/components/schemas/BuildModel"
            }
          }
        }
      },
      "BuildModelHomeworkApiResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/BuildModel"
          }
        }
      },
      "BuildRequestResultModel": {
        "required": [
          "buildNumber",
          "id",
          "status"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "buildNumber": {
            "type": "integer",
            "format": "int32"
          },
          "status": {
            "$ref": "#/components/schemas/BuildStatus"
          }
        }
      },
      "BuildRequestResultModelHomeworkApiResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/BuildRequestResultModel"
          }
        }
      },
      "BuildStatus": {
        "type": "string",
        "enum": [
          "Waiting",
          "InProgress",
          "Success",
          "Fail",
          "Canceled"
        ],
        "x-ms-enum": {
          "name": "BuildStatus",
          "modelAsString": true
        }
      },
      "ConfigurationInput": {
        "required": [
          "buildCommand",
          "mainBranch",
          "period",
          "repoName"
        ],
        "type": "object",
        "properties": {
          "repoName": {
            "type": "string"
          },
          "buildCommand": {
            "type": "string"
          },
          "mainBranch": {
            "type": "string"
          },
          "period": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "ConfigurationModel": {
        "required": [
          "buildCommand",
          "id",
          "mainBranch",
          "period",
          "repoName"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "repoName": {
            "type": "string"
          },
          "buildCommand": {
            "type": "string"
          },
          "mainBranch": {
            "type": "string"
          },
          "period": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "ConfigurationModelHomeworkApiResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/ConfigurationModel"
          }
        }
      },
      "QueueBuildInput": {
        "required": [
          "authorName",
          "branchName",
          "commitHash",
          "commitMessage"
        ],
        "type": "object",
        "properties": {
          "commitMessage": {
            "type": "string"
          },
          "commitHash": {
            "type": "string"
          },
          "branchName": {
            "type": "string"
          },
          "authorName": {
            "type": "string"
          }
        }
      }
    }
  }
}
