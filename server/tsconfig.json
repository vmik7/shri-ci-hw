{
    "compilerOptions": {
        "target": "ES5",
        "allowJs": true,
        "strict": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": false,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "myrepo", "dist"],
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriority",
        "excludeDirectories": ["**/node_modules", "dist", "myrepo"]
    }
}
